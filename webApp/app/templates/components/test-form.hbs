{{#lf-form rules=rules as |validateFunction|}}

  {{lf-select

    name="courseId"
    label="Course"
    property=data.courseId
    content=courseList
    labelPath="title"
    valuePath="id"
    on-update=(action "updateCourseConnection" data)
    validate=validateFunction
  }}

  {{lf-select
      name="userId"
      label="Instructor"
      property=data.userId
      content=instructorList
      labelPath="name"
      valuePath="id"
      on-update=(action "updateUserConnection" data)
      validate=validateFunction

  }}


  {{lf-select
      name="semesterId"
      label="Semester"
      property=data.semesterId
      content=semesterList
      labelPath="year"
      valuePath="id"
      on-update=(action "updateSemesterConnection" data)
      validate=validateFunction
  }}



  {{lf-input

    label="section Number"
    property=data.sectionNum
    name="sectionNum"
    validate=validateFunction
    on-update=(action (mut data.sectionNum))
  }}


  {{lf-input
    name="locked"
    label="Class is Locked"
    property=data.locked
    validate=validateFunction
    on-update=(action (mut data.locked))
  }}

  {{lf-input
    name="numStudents"
    label="Number Students"
    property=data.numStudents
    validate=validateFunction
    on-update=(action (mut data.numStudents))
  }}


{{/lf-form}}
{{yield data}}
