{{#lf-form rules=rules}}

  {{lf-input

    name="Name"
    label="Name"
    property=data.name
    on-update=(action (mut data.name))
    validate=validate
  }}

  {{lf-input
    name="username"
    label="Username"
    property=data.username
    on-update=(action (mut data.username))
    validate=validate
  }}

  {{lf-input
    name="jobTitle"
    label="Job Title"
    property=data.jobTitle.title
    on-update=(action (mut data.jobTitle.title))
    validate=validate
  }}
  
  {{#each data.roleList as |role|}}
	name="roleName"
    label="Role"
    property=role.name
    on-update=(action (mut role.name))
    validate=validate
  {{/each}}
  
{{/lf-form}}

{{yield data}}